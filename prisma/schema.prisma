generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id              String      @id @default(uuid())
  tx_ref          String      @unique
  service_type    String
  status          OrderStatus
  form_data       Json?
  created_at      DateTime    @default(now())
  customer_name   String?
  customer_phone  String?
  customer_email  String?
  chapa_ref       String?     @unique
  paid_at         DateTime?
  expires_at      DateTime?
  pdf_url         String?     @map("pdf_url")
  ai_generated    Boolean     @default(false) @map("ai_generated")
  ai_generated_at DateTime?   @map("ai_generated_at")

  @@map("orders")
}

model VirtualAssistanceRequest {
  id                     String                  @id @default(uuid())
  full_name              String
  phone_number           String
  email                  String?
  telegram_username      String?
  job_category           String
  experience_level       String
  education_level        String
  location               String
  notes                  String?
  resume_url             String?
  status                 VirtualAssistanceStatus @default(PENDING)
  language               String                  @default("en")
  source                 String                  @default("dashboard")
  disclaimer_accepted_at DateTime
  created_at             DateTime                @default(now())

  @@map("virtual_assistance_requests")
}

model PrintProduct {
  id          String                  @id @default(uuid())
  name        String
  description String?
  base_price  Decimal                 @map("base_price")
  image_url   String?                 @map("image_url")
  category    String                  @default("Marketing")
  sub_category String?                @map("sub_category")
  active      Boolean                 @default(true)
  created_at  DateTime                @default(now()) @map("created_at")
  orders      PrintOrder[]
  variations  PrintProductVariation[]

  @@map("print_products")
}

model PrintProductVariation {
  id         String       @id @default(uuid())
  product_id String       @map("product_id")
  name       String
  image_url  String       @map("image_url")
  product    PrintProduct @relation(fields: [product_id], references: [id], onDelete: Cascade)

  @@map("print_product_variations")
}

model PrintOrder {
  id             String           @id @default(uuid())
  product_id     String?          @map("product_id")
  product_name   String           @map("product_name")
  full_name      String           @map("full_name")
  phone          String
  email          String?
  location       String
  quantity       Int
  notes          String?
  status         PrintOrderStatus @default(pending)
  created_at     DateTime         @default(now()) @map("created_at")
  variation_id   String?          @map("variation_id")
  variation_name String?          @map("variation_name")
  product        PrintProduct?    @relation(fields: [product_id], references: [id])

  @@map("print_orders")
}

enum OrderStatus {
  DRAFT
  PENDING
  PAID
  FAILED
}

enum VirtualAssistanceStatus {
  PENDING
  CONTACTED
  CLOSED
}

enum PrintOrderStatus {
  pending
  contacted
  completed
  cancelled
}

enum WebDevStatus {
  PENDING
  CONTACTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum WebDevProjectType {
  PORTFOLIO
  LANDING_PAGE
  E_COMMERCE
  SAAS
  CORPORATE
  BLOG
  OTHER
}

model WebDevRequest {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Contact Info
  fullName    String
  email       String
  phone       String
  
  // Project Details
  projectType WebDevProjectType
  budgetRange String?
  description String?
  
  // Status
  status      WebDevStatus @default(PENDING)
}
