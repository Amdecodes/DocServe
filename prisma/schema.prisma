generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id           String      @id @default(uuid())
  tx_ref       String      @unique
  service_type String
  status       OrderStatus
  pdf_path     String?
  form_data    Json?
  created_at   DateTime    @default(now())
  
  // Payment Details
  customer_name  String?
  customer_email String?
  customer_phone String?
  chapa_ref      String?    @unique // The 'reference' from Chapa
  paid_at        DateTime?
}

enum OrderStatus {
  DRAFT
  PENDING
  PAID
  FAILED
}
